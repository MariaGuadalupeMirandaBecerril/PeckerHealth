            </div>
            <div class="caja_texto_expediente">
                <input type="text" class="input_expediente" value="<%= expediente.imc %>" disabled>
                <span mensajePassword></span>
            </div>
            <div class="boton_editar">
                <button class="button_editar" type="submit"><a class="a_editar" href="/editarExpediente/<%= expediente.id %>">Editar</a></button>
                <button class="button_editar" type="submit"><a class="a_editar" href="/borrarExpediente/<%= expediente.id %>">Borrar</a></button>
            </div>
            <%
            });
            %>
        </form>
    </div>
</div>
<%- include("../templates/pie") %>