            <div class="caja_texto_expediente">
                <input type="text" class="input_expediente" value="<%= expediente.estatura %>" disabled>
                <span mensajePassword></span>
            </div>
            <div class="caja_texto_expediente">
                <input type="text" class="input_expediente" value="<%= expediente.peso %>" disabled>
